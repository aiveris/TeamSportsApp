<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.montini.teamsports.model.PlayEvent" table = "playevent">
        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>
        <property name = "eventDate" column = "eventDate" type = "java.sql.Date"/>
        <property name = "title" column = "title" type = "string"/>
        <property name = "organiser" column = "type" type = "string"/>
        <property name = "freeSlots" column = "freeSlots" type = "int"/>

    </class>
</hibernate-mapping>
