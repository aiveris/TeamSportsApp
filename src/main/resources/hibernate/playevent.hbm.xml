<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.montini.teamsports.model">
    <class name = "com.montini.teamsports.model.PlayEvent" table = "playevent">
        <meta attribute = "class-description">This class contains the play events detail.</meta>
        <id name = "id" type = "int" column = "playevent_id"><generator class="native"/></id>
        <many-to-one name="location" class="Location" column="location_id" not-null="true" cascade="all"/>
<!--        <property name = "location" column = "location_id" type = "int"/>-->
        <property name = "eventDate" column = "eventDate" type = "string"/>
        <property name = "eventTime" column = "eventTime" type = "string"/>
        <property name = "title" column = "title" type = "string"/>
        <property name = "gameType" column = "gameType" type = "int"/>
        <property name = "freeSlots" column = "freeSlots" type = "int"/>

    </class>
</hibernate-mapping>
